	"scripts": {
		"clean": "rimraf ./dist",
		"compile": "run-s compile:*",
		"compile:import": "tsc --project tsconfig.import.json",
		"compile:require": "tsc --project tsconfig.require.json",
		"document": "build-storybook --no-dll --static-dir ./.storybook/public --output-dir ./docs-build",
		"lint": "eslint src/**/*.{ts,tsx}",
		"lint:fix": "eslint src/**/*.{ts,tsx} --fix",
		"pre-compile": "run-s pre-compile:*",
		"pre-compile:import": "tsc --noemit --project tsconfig.import.json",
		"pre-compile:require": "tsc --noemit --project tsconfig.require.json",
		"prepublishOnly": "run-s compile prettify",
		"prettify": "prettier --write --loglevel warn './dist/**/*.{js,ts}'",
		"start": "start-storybook --static-dir ./.storybook/public --port 3000",
		"test": "c8 --reporter=html --reporter=text-summary --reporter=lcov jest"
	},
